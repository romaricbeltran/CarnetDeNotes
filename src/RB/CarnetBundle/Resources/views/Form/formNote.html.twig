<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# error #}
  {{ form_errors(form) }}

  {#MATIERE#}
  {# Génération manuelle et éclatée : #}
  <div class="form-group">
    {# label #}
    {{ form_label(form.matiere, "Matiere", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# error #}
    {{ form_errors(form.matiere) }}

    {# input #}
    <div class="col-sm-10">
      {{ form_widget(form.matiere, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>


  {#CHIFFRE#}
  {# Génération manuelle et éclatée : #}
  <div class="form-group">
    {# label #}
    {{ form_label(form.chiffre, "Note", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# error #}
    {{ form_errors(form.chiffre) }}

    {# input #}
    <div class="col-sm-10">
      {{ form_widget(form.chiffre, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {#VALIDER#}
  {{ form_widget(form.ajouter, {'attr': {'class': 'bouton'}}) }}

  {#RESTE#}
  {{ form_rest(form) }}


  {{ form_end(form) }}
</div>